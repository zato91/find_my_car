<div id="car-wrapper">
  <div class="profile-header-wrapper">
    <div class="container profile-header-container text-center">
      <div class="profile-header-infos">
        <h2>Tableau de bord</h2>
      </div>

      <div class="tabs">
        <a class="tab active" data-target="#mycars">
          <h3>Mes voitures</h3>
        </a>
        <a class="tab" data-target="#mybooking">
          <h3>RÃ©servations sur mon garage</h3>
        </a>
        <a class="tab" data-target="#myrents">
          <h3>Mes locations</h3>
        </a>
        <a class="tab" data-target="#myprofile">
          <h3>Mon profil</h3>
        </a>
      </div>
    </div>
  </div>

  <% if current_user == @user %>
   	<% if  params[:tab] == "mycars" %>
    	<%= render 'my_cars' %>
  	<% elsif  params[:tab] == "myrents" %>
  	  <%= render 'my_rents' %>
  	<% elsif params[:tab] == "myprofile" %>
  	  <%= render 'my_profile' %>
    <% end %>
  <% else %>
    <%= render 'public_profile' %>
  <% end %>
</div>
