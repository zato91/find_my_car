<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <!-- <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <!-- <%#= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <%# end %> -->

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div class="navbar-wagon-name">
          <% if current_user.photo&.path != nil %>
            <%= cl_image_tag current_user.photo&.path, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% elsif current_user.picture %>
            <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "unknown_user.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <%= current_user.name %>
          <i class="fa fa-angle-double-down" data-toggle="dropdown"></i>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(id: current_user.id, tab: 'mycars') do %>
                <i class="fa fa-car"></i> <%= t ".profile", default: "Mes voitures" %>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(id: current_user.id, tab: 'myrents') do %>
                <i class="fa fa-calendar-check-o"></i>  <%= t ".profile", default: "Mes locations" %>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(id: current_user.id, tab: 'myprofile') do %>
                <i class="fa fa-user"></i>  <%= t ".profile", default: "Mon profil" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Déconnexion" %>
              <% end %>
            </li>
          </ul>
          </div>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link navbar-wagon-btn-login" %>
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link navbar-wagon-btn-login" %>
    <% end %>

    <!-- Button (call-to-action) -->
    <% if user_signed_in? %>
      <%= link_to t(".top_call_to_action", default: "Je loue ma voiture"), new_car_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% else %>
      <%= link_to t(".sign_in", default: "Je loue ma voiture"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(id: current_user.id, tab: 'mycars') do %>
              <i class="fa fa-car"></i> <%= t ".profile", default: "Mes voitures" %>
            <% end %>
          </li>
          <li>
              <%= link_to user_path(id: current_user.id, tab: 'myrents') do %>
                <i class="fa fa-calendar-check-o"></i>  <%= t ".profile", default: "Mes locations" %>
              <% end %>
          </li>
          <li>
            <%= link_to user_path(id: current_user.id, tab: 'myprofile') do %>
              <i class="fa fa-user"></i>  <%= t ".profile", default: "Mon profil" %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Déconnexion" %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_session_path do %>
              <i class="fa fa-sign-in"></i>  <%= t ".sign_in", default: "Se connecter"  %>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
              <i class="fa fa-user-plus"></i>  <%= t ".sign_up", default: "S'inscrire"  %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
