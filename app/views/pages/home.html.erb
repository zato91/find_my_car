<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.5) 50%), url(<%= asset_path('car.jpg') %>);">
  <div class="banner-content">
    <h1>Find My Car - WELCOME</h1>
    <p>
      Trouve ta voiture tout près de chez toi !
    </p>

    <%= form_tag(cars_path, method: :get,class: 'form-inline' ) do %>
      <input type="text" class="form-control input-lg datepicker" placeholder="Début" name="date_start">
      <input type="text" class="form-control input-lg datepicker" placeholder="Fin" name="date_end">
      <%= text_field_tag(:address, nil, placeholder:"Adresse...", class: 'form-control input-lg') %>
      <%= submit_tag 'Search', class: "btn btn-success btn-lg", value: "Search" %>
    <% end %>
  </div>
</div>
