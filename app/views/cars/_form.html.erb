<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @car do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :category, collection: Car::CATEGORIES, prompt: "Select category" %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
